{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "slug": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "content": {
            "type": "text",
            "required": true
        },
        "excerpt": {
            "type": "text",
            "required": true
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "News",
                "Promo"
            ],
            "required": true
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "youtube_url": {
            "type": "string"
        }
    }
}
